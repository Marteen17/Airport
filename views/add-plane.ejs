<h2>Agregar Avión</h2>

<form method="POST" action="/planes">
  <fieldset>
    <legend>Información del Avión</legend>

    <label for="registrationNumber">Número de Registro:</label>
    <input type="text" id="registrationNumber" name="registrationNumber" required>

    <label for="airline">Aerolínea:</label>
    <input type="text" id="airline" name="airline" required>

    <label for="capacity">Capacidad:</label>
    <input type="number" id="capacity" name="capacity" required>

    <label for="status">Estado:</label>
    <select id="status" name="status" required>
      <option value="Disponible">Disponible</option>
      <option value="En mantenimiento">En mantenimiento</option>
      <option value="En vuelo">En vuelo</option>
    </select>
  </fieldset>

  <button type="submit">Agregar</button>
</form>